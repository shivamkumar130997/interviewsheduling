@model InterviewSchedulingProject1.Models.RegisterUser

@{
    ViewData["Title"] = "Login";
    //Layout = "/Views/Shared/_LayoutCopy.cshtml";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
 

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="~/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/assets/dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a style="color:white;" ><b>User Registration</b></a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Register a new membership</p>

     <form method="post" asp-action="Register" asp-controller="ISP">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group mb-3">
          <input asp-for="username" class="form-control" placeholder="username">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        
        </div>
   
         <span asp-validation-for="username" class="text-danger"></span>
        <div class="input-group mb-3">
          <input type="password" asp-for="Password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
      
        </div>

         <span asp-validation-for="Password" class="text-danger"></span>
        <div class="input-group mb-3">
          <input  asp-for="ConfirmPassword" class="form-control" placeholder="Retype password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
         
        </div>

         <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <div class="row">
     
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
          <!-- /.col -->
        </div>
      </form>


      <a asp-action="Login" asp-controller="ISP" class="text-center">Got To Login</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

<!-- jQuery -->
<script src="~/assets/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/assets/dist/js/adminlte.min.js"></script>
</body>
</html>

<style>
    .login-page, .register-page {
 
       background-color: #888a8d;
background-image:url("https://wallpaperaccess.com/full/2314983.jpg");
    }



</style>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
